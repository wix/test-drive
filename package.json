{
  "name": "test-drive",
  "version": "1.1.1",
  "description": "Opinionated library for writing web component tests",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "types": "./esm/index.d.ts",
  "scripts": {
    "clean": "rimraf ./cjs ./esm",
    "prebuild": "npm run clean",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p tsconfig.build.json --outDir cjs --module commonjs",
    "build:esm": "tsc -p tsconfig.build.json --outDir esm --module esnext",
    "pretest": "npm run typecheck && npm run lint",
    "test": "mocha-pup \"./test/**/*.spec.ts\"",
    "lint": "eslint . -f codeframe",
    "typecheck": "tsc --noEmit",
    "prepack": "npm run build"
  },
  "dependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-dom": "^1.8.2",
    "chai-style": "^1.0.3",
    "dom-matches": "^2.0.0",
    "promise-assist": "^1.3.0",
    "sinon": "^9.2.1",
    "sinon-chai": "^3.5.0"
  },
  "devDependencies": {
    "@ts-tools/webpack-loader": "^2.1.1",
    "@types/chai": "^4.2.14",
    "@types/chai-as-promised": "^7.1.3",
    "@types/chai-dom": "^0.0.10",
    "@types/chai-style": "^1.0.0",
    "@types/dom-matches": "^2.0.0",
    "@types/mocha": "^8.0.3",
    "@types/sinon": "^9.0.8",
    "@types/sinon-chai": "^3.2.5",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "mocha": "^8.2.1",
    "mocha-pup": "^4.0.4",
    "puppeteer": "^5.4.1",
    "rimraf": "^3.0.2",
    "typescript": "~4.0.5",
    "webpack": "^4.44.2"
  },
  "files": [
    "cjs",
    "esm",
    "src",
    "matchers.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:wixplosives/test-drive.git"
  },
  "author": "Jiri Tobisek <jiri@wix.com>",
  "contributors": [
    "Avi Vahl <avi.vahl@wix.com>",
    "Amir Arad <amira@wix.com>",
    "Kieran Williams <kieranw@wix.com>",
    "Lior Zisman <liorzi@wix.com>"
  ],
  "bugs": {
    "url": "https://github.com/wixplosives/test-drive/issues"
  },
  "homepage": "https://github.com/wixplosives/test-drive#readme",
  "license": "MIT",
  "sideEffects": false,
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "tabWidth": 4,
    "overrides": [
      {
        "files": [
          "*.json",
          "*.md",
          "*.yml"
        ],
        "options": {
          "tabWidth": 2
        }
      }
    ]
  }
}
