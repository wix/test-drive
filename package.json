{
  "name": "test-drive",
  "version": "1.0.3",
  "description": "Opinionated library for writing web component tests",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "types": "./esm/index.d.ts",
  "scripts": {
    "clean": "rimraf ./cjs ./esm",
    "prebuild": "yarn clean",
    "build": "yarn build:cjs && yarn build:esm",
    "build:cjs": "tsc -p src --outDir cjs --module commonjs",
    "build:esm": "tsc -p src --outDir esm --module esnext",
    "test": "mocha-pup \"./test/**/*.spec.ts\" -c webpack.config.js",
    "prepack": "yarn build"
  },
  "dependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-dom": "^1.8.1",
    "chai-style": "^1.0.3",
    "dom-matches": "^2.0.0",
    "promise-assist": "^1.2.5",
    "sinon": "^7.3.1",
    "sinon-chai": "^3.3.0"
  },
  "devDependencies": {
    "@ts-tools/node": "^0.9.3",
    "@ts-tools/webpack-loader": "^0.8.8",
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/chai-dom": "^0.0.7",
    "@types/mocha": "^5.2.6",
    "@types/sinon": "^7.0.11",
    "@types/sinon-chai": "^3.2.2",
    "mocha": "^6.1.3",
    "mocha-loader": "^2.0.1",
    "mocha-pup": "^0.1.12",
    "rimraf": "^2.6.3",
    "typescript": "~3.4.3",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0"
  },
  "files": [
    "cjs",
    "esm",
    "src",
    "!src/tsconfig.json",
    "matchers.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:wixplosives/test-drive.git"
  },
  "author": "Jiri Tobisek <jiri@wix.com>",
  "contributors": [
    "Avi Vahl <avi.vahl@wix.com>",
    "Amir Arad <amira@wix.com>",
    "Kieran Williams <kieranw@wix.com>",
    "Lior Zisman <liorzi@wix.com>"
  ],
  "bugs": {
    "url": "https://github.com/wixplosives/test-drive/issues"
  },
  "homepage": "https://github.com/wixplosives/test-drive#readme",
  "license": "MIT",
  "sideEffects": false
}
